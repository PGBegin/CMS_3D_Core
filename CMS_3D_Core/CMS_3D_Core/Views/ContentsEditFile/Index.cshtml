@model IEnumerable<CMS_3D_Core.Models.EDM.t_part>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-3"></div>


    <div class="col-md-6">



        <h1>Index</h1>
        <p>
            <a asp-action="Create">Upload New File</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.part_number)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.version)
                    </th>
                    <th>
                        Format
                    </th>
                    <th>
                        FileSize[MB]
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.license)
                    </th>
                    <th>
                        Data Source
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.author)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.id_part">@Html.DisplayFor(modelItem => item.id_part)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.part_number)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.version)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.format_data)
                        </td>
                        <td>
                            @(((float)item.file_length.Value/1000000).ToString("0.00"))
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.license)
                        </td>
                        <td>
                            <a href="@item.itemlink">Data Source</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.author)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>