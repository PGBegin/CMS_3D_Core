@model CMS_3D_Core.Models.EDM.t_attachment


@{
    ViewData["Title"] = "AttachFile:Edit";
}

<h1>AttachFile:Edit</h1>

<p class="text-info">
    @ViewBag.ResultMsg
</p>

<h4>Edit File</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        <div class="form-group">
            @Html.DisplayNameFor(model => model.file_data)
            <img src="~/ContentsEditAttachment/GetAttachmentFile/@Model.id_file">
        </div>

        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <input type="hidden" asp-for="id_file" />

            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="format_data" class="control-label"></label>
                <input asp-for="format_data" class="form-control" />
                <span asp-validation-for="format_data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="file_name" class="control-label"></label>
                <input asp-for="file_name" class="form-control" />
                <span asp-validation-for="file_name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="itemlink" class="control-label"></label>
                <input asp-for="itemlink" class="form-control" />
                <span asp-validation-for="itemlink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="license" class="control-label"></label>
                <input asp-for="license" class="form-control" />
                <span asp-validation-for="license" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="memo" class="control-label"></label>
                <input asp-for="memo" class="form-control" />
                <span asp-validation-for="memo" class="text-danger"></span>
            </div>

            @*
                <div class="form-group">
                    <label asp-for="file_data" class="control-label"></label>
                    <input type="file" name="formFile" class="custom-file-input" />
                    <span asp-validation-for="file_data" class="text-danger"></span>
                </div>
            *@


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.id_file">Back to Details</a>
    |
    <a asp-action="Index">Back to List</a>
</div>