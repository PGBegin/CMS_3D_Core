@model CMS_3D_Core.Models.EDM.t_assembly

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

@Html.HiddenFor(model => model.id_assy, new { id = "id_assy" })
<input type="hidden" value="true" id="is_mode_assy" />
<input type="hidden" value="false" id="is_edit_mode" />
<input type="hidden" value="0" id="id_article" />

<h4>t_assembly</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_assy" />
            <div class="form-group">
                <label asp-for="assy_name" class="control-label"></label>
                <input asp-for="assy_name" class="form-control" />
                <span asp-validation-for="assy_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a> |
    <a asp-action="Details" asp-route-id="@Model.id_assy">Details</a> |
    <a asp-action="Delete" asp-route-id="@Model.id_assy">Delete</a>
</div>


<div class="container">

    <div class="row">

        <div class="col-md-7">
            <h2>@Html.DisplayFor(model => model.assy_name)</h2>

            @*モデルの表示領域*@
            <canvas id="model_screen">
            </canvas>

            <div class="progress" id="div_progressbar_modeldl">
                <div class="progress-bar" role="progressbar" style="width: 0%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" id="progressbar_modeldl"></div>
            </div>
            <hr />

            <div id="control_panel_zone">
            </div>

            <hr />

            @*表示用ビューならここにインストラクションの表示領域がある*@
            <div id="preview_instruction_short_description"></div>

        </div>

    </div>

</div>


<div id="div_progressbar_modeldl"></div>
<div id="id_contents_instructions"></div>



<script type="module" src="~/js/dist/tdarticle.bundle.js"></script>