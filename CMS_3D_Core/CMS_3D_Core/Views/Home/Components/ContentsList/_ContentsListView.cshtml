@model IEnumerable<CMS_3D_Core.Models.EDM.t_assembly>



    @{
    int index = 0;
    }

    <div class="row">
        <div class="col-md-3"></div>


        <div class="col-md-6">


            <table class="table">
                <tr>
                    <th>
                        No
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Link
                    </th>
                </tr>
                @{
                foreach (var item in Model)
                {

                <tr>
                    <td>
                        @(index + 1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.assy_name)
                    </td>
                    <td>
                        @Html.ActionLink("View Detail", "DetailProductInstruction", "ContentsView", new { id_assy = item.id_assy })
                    </td>
                </tr>
                index += 1;
                }
                }

            </table>
        </div>

    </div>
