@model CMS_3D_Core.Models.EDM.t_view


<div id="view_data">

    <form asp-controller="t_view" asp-action="EditProductView">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row ">


            <input type="hidden" asp-for="id_article" id="view_id_article" />
            @*@Html.Hidden("id_article", 0, new { id = "view_id_article" })*@

            <div class="col-sm-2">
                @*@Html.Label("id_view", "ID View", htmlAttributes: new { @class = "control-label font-weight-bold" })
                *@
                <label asp-for="id_view" class="control-label font-weight-bold"></label>
                <div class="px-3">
                    @*@Html.TextBox("id_view", "", new { id = "view_id_view", @class = "form-control" })
                    *@
                    <input asp-for="id_view" class="form-control" id="view_id_view" />
