                    @*@Html.TextBox("title", "", new { id = "view_title", @class = "form-control" })
                    *@
                    <input asp-for="title" class="form-control" id="view_title" />
                    <span asp-validation-for="title" class="text-danger"></span>
                </div>
            </div>

        </div>

