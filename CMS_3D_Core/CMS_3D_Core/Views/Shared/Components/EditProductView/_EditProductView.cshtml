                    *@
                    <input asp-for="cam_pos_z" class="form-control" id="cam_pos_z" />
                    <span asp-validation-for="cam_pos_z" class="text-danger"></span>
                </td>
                <td>
                    --
                </td>
            </tr>
            <tr>
                <td>
                    Camera Look At
                </td>
                <td>
                    @*<input id="cam_lookat_x" name="cam_lookat_x" type="text" value="" class="form-control" />
