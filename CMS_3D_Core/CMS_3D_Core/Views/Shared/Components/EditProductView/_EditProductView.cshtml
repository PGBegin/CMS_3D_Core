            <tr>
                <td>
                    Camera Position
                </td>
                <td>
                    @*<input id="cam_pos_x" name="cam_pos_x" type="text" value="" class="form-control" />
                    *@
                    <input asp-for="cam_pos_x" class="form-control" id="cam_pos_x" />
                    <span asp-validation-for="cam_pos_x" class="text-danger"></span>
                </td>
                <td>
                    @*<input id="cam_pos_y" name="cam_pos_y" type="text" value="" class="form-control" />
                    *@
