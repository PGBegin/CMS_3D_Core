                <input class="form-control" id="article_id_bg_l" type="number" data-val="true" data-val-required="The status field is required." name="bg_l" />
                <span class="text-danger field-validation-valid" data-valmsg-for="article_id_bg_l" data-valmsg-replace="true"></span>
            </div>
        </div>

    </div>

    <hr />

    <div class="form-group row ">

        <button class="btn btn-primary" id="DbUpdateArticle">Save</button>

    </div>
</div>








