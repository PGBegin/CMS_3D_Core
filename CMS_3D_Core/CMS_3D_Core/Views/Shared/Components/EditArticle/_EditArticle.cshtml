            <span class="text-danger field-validation-valid" data-valmsg-for="article_id_meta_description" data-valmsg-replace="true"></span>
        </div>

        <div class="col-sm-12">
            <label class="control-label" for="article_id_meta_category">meta_description</label>
            <textarea class="form-control" id="article_id_meta_category" name="meta_category" rows="2"></textarea>
            <span class="text-danger field-validation-valid" data-valmsg-for="article_id_meta_category" data-valmsg-replace="true"></span>
        </div>

    </div>


    <hr />

    <h5>Base Info</h5>

