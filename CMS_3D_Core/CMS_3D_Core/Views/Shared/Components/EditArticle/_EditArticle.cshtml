                <span class="text-danger field-validation-valid" data-valmsg-for="article_id_bg_h" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="col-sm-4">
            <label class="control-label font-weight-bold" for="article_id_bg_s">id_status</label>
            <div class="px-4">
                <input class="form-control" id="article_id_bg_s" type="number" data-val="true" data-val-required="The status field is required." name="bg_s" />
                <span class="text-danger field-validation-valid" data-valmsg-for="article_id_bg_s" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="col-sm-4">
