                <span class="text-danger field-validation-valid" data-valmsg-for="title" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="col-sm-2">
            <label class="control-label font-weight-bold" for="id_view">id_view</label>
            <div class="px-3">
                <input class="form-control" id="instruction_id_view" type="number" data-val="true" data-val-required="The id_view field is required." name="id_view" />
