                    <input type="submit" value="Save" class="btn btn-primary" onclick="return confirm('Are you update Instruction?')" />
                </div>
            </div>
        *@

    </div>


    <div class="form-group row ">

        <input type="hidden" id="instruction_id_article_delete" data-val="true" data-val-required="The id_article field is required." name="id_article" />
        <input type="hidden" id="instruction_id_instruct_delete" data-val="true" data-val-required="The id_instruct field is required." name="id_instruct" />

        @*
            <div class="col-sm-8">
                <label class="control-label font-weight-bold"></label>
                <div class="px-3">
                    <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure delete Instruction?')" />
                </div>
            </div>
