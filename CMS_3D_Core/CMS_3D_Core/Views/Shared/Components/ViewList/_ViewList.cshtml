@model IEnumerable<CMS_3D_Core.Models.EDM.t_view>


<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                @Html.DisplayNameFor(model => model.title)
            </th>
            <th>
                X
            </th>
            <th>
                Y
            </th>
            <th>
                Z
            </th>
            <th>
                REf
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_view)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @item.cam_pos_x.Value.ToString("0.00")
            </td>
            <td>
                @item.cam_pos_y.Value.ToString("0.00")
            </td>
            <td>
                @item.cam_pos_z.Value.ToString("0.00")
            </td>
            <td>
                @item.t_instructions.Count
            </td>
            <td>
                @if (item.t_instructions.Count > 0) { }
                else
                {
                    <form asp-action="Delete" asp-controller="t_view">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        @Html.Hidden("id_article", item.id_article)
                        @Html.Hidden("id_view", item.id_view)
                        <input type="submit" value="Delete" class="btn btn-danger btn-sm" onclick="return confirm('Do you delete this View？')" />
                    </form>
                }


            </td>
        </tr>
}
    </tbody>
</table>
